<div class="container-fluid">
<div class="col-md-10 mx-auto mb-5">
<div class="row p-1 justify-content-center">
<h3 class="text-center mb-5">{{features.title}}</h3>
{% for f in features.item %}
<div class="col-md-4 col-6 p-1">
<div class="text-body-emphasis bg-body-tertiary rounded p-3 card">
<div class="row p-1">
<p class="col-md-3 col-2 display-4"><i class="bi bi-{{f.icon}} violet text-white card p-1 shadow-sm rounded"></i></p>
<div class="col-md-9 col-10 small">
<h3 class="semi">{{f.title}}</h3>
<p>{{f.text}}</p>
</div>
</div>
</div>
</div>
{% endfor %}       
</div>
</div>
<div class="col-md-9 mx-auto mb-5">
<div class="row text-center mt-3">{% for s in features.support %}
<div class="col-md-2 col-4"><span class="badge text-body-secondary card bg-body-tertiary"><i class="p-1 bi bi-{{s.icon}} me-1"></i> {{s.title}} </span></div>
{% endfor %}</div>
</div>
</div>