<div class="col-md-11 mx-auto mt-5 mb-5">
<div class="container-fluid">
<div class="row justify-content-center">
<div class="col-md-12 text-center">
<h3>{{metadata.showcase.title}}</h3>
<p>{{metadata.showcase.description}}</p>
</div>
<div class="col-md-6 p-3">
<img class="img-fluid rounded shadow" alt="{{metadata.showcase.title}}" width="100%" height="100%"
src="{{metadata.showcase.cover}}"/>
</div>
<div class="col-md-3 p-3">
<div class="row p-1">
{% for b in metadata.showcase.button %}
<a href="{{b.link}}" class="bg-body-tertiary card p-3 p-md-5 text-center mt-3 mb-3 col-md-12 col-6">
<i class="bi bi-{{b.icon}}"></i>
{{b.name}}
</a>
{% endfor %}</div>
</div>
</div>
</div>
</div>